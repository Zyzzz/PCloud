<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#232629" >


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="14"
                    android:background="#e05b5b">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:text="Details"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" android:weightSum="1">


                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">
                    <LinearLayout
                            style="@style/Register_Input"
                            android:background="@drawable/corners_bg">

                        <TextView
                                style="@style/Smile.TextView._Black"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="begin"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/startDate"
                                style="@style/Register_Edit"
                                android:textColor="#FFFFFF"
           						android:singleLine="true"
                                android:editable="false"/>
                    </LinearLayout>

                    <LinearLayout
                            style="@style/Register_Input"
                            android:background="@drawable/corners_bg">

                        <TextView
                                style="@style/Smile.TextView._Black"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="  end  "
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/endDate"
                                style="@style/Register_Edit"
                                android:textColor="#FFFFFF"
            					android:singleLine="true"
                                android:editable="false"/>
                    </LinearLayout>
                    <LinearLayout
                            style="@style/Register_Input"
                            android:background="@drawable/corners_bg">

                        <TextView
                                style="@style/Smile.TextView._Black"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="phone"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/phoneNumber"
                                style="@style/Register_Edit"
                                android:textColor="#FFFFFF"
            					android:singleLine="true"
                                android:editable="false"/>
                    </LinearLayout>
                    <LinearLayout
                            style="@style/Register_Input"
                            android:background="@drawable/corners_bg">

                        <TextView
                                style="@style/Smile.TextView._Black"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="address"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/address"
                                style="@style/Register_Edit"
                                android:textColor="#FFFFFF"
            					android:singleLine="true"
                                android:editable="false"/>
                    </LinearLayout>
                    <LinearLayout
                            style="@style/Register_Input"
                            android:layout_height="180dp"
                            android:background="@drawable/corners_bg">

                        <TextView
                                style="@style/Smile.TextView._Black"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="details"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/details"
                                style="@style/Register_Edit"
                                android:textColor="#FFFFFF"
            					android:singleLine="true"
                                android:editable="false"/>

                    </LinearLayout>
                    <LinearLayout
                            style="@style/Register_Input"
                            android:layout_height="180dp"
                            android:background="@drawable/corners_bg"
                            android:visibility="gone">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/chat_icon_voice1"/>

                    </LinearLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/base_horization_line" />
                    <Button
                            android:id="@+id/btn_collect"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/base_action_bar_height"
                            android:layout_margin="@dimen/activity_vertical_margin"
                            android:background="@drawable/button_chick_style"
                            android:text="collect"
                            android:textColor="@color/base_color_text_white"
                            android:textSize="@dimen/text_size_large"
                            android:gravity="center"/>
                    <Button
                            android:id="@+id/btn_back"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/base_action_bar_height"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_chick_style"
                            android:text="cancel"
                            android:textColor="@color/base_color_text_white"
                            android:textSize="@dimen/text_size_large"
                            android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>