<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    	xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
<RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#232629" >


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="14"
                android:background="#e05b5b">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:text="Sell"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" android:weightSum="1">
            <LinearLayout
                    style="@style/Register_Input"
                    android:background="@drawable/corners_bg">

                <TextView
                        style="@style/Smile.TextView._Black"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="begin"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/et_start_time"
                        style="@style/Register_Edit"
                        android:textColor="#FFFFFF"
            			android:singleLine="true"
                        android:hint="Click to set sale date..." />
            </LinearLayout>

            <LinearLayout
                    style="@style/Register_Input"
                    android:background="@drawable/corners_bg">

                <TextView
                        style="@style/Smile.TextView._Black"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="  end  "
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/et_end_times"
                        style="@style/Register_Edit"
                        android:textColor="#FFFFFF"
            			android:singleLine="true"
                        android:hint="Click to set sale date..." />
            </LinearLayout>
            <LinearLayout
                    style="@style/Register_Input"
                    android:background="@drawable/corners_bg">

                <TextView
                        style="@style/Smile.TextView._Black"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="phone"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/phoneNumber"
                        style="@style/Register_Edit"
                        android:textColor="#FFFFFF"
            			android:singleLine="true"
                        android:hint="Input your phoneNumber..." />
            </LinearLayout>
            <LinearLayout
                    style="@style/Register_Input"
                    android:background="@drawable/corners_bg">

                <TextView
                        style="@style/Smile.TextView._Black"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="address"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/address"
                        style="@style/Register_Edit"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:hint="Input your address..." />
            </LinearLayout>
            <LinearLayout
                    style="@style/Register_Input"
                    android:layout_height="180dp"
                    android:background="@drawable/corners_bg">

                <TextView
                        style="@style/Smile.TextView._Black"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="details"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/details"
                        style="@style/Register_Edit"
                        android:textColor="#FFFFFF"
                        android:hint="Input your shop intro..." />
            </LinearLayout>
            <Button
                    android:id="@+id/btn_set_address"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_action_bar_height"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:background="@drawable/button_chick_style"
                    android:text="set address"
                    android:textColor="@color/base_color_text_white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"/>
             <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/base_horization_line" />
            <Button
                    android:id="@+id/btn_picture"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_action_bar_height"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:background="@drawable/button_chick_style"
                    android:text="Set picture"
                    android:textColor="@color/base_color_text_white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"
                    android:visibility="gone"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/base_horization_line" />
            <Button
                    android:id="@+id/btn_commit_sale"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_action_bar_height"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:background="@drawable/button_chick_style"
                    android:text="submit"
                    android:textColor="@color/base_color_text_white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/base_horization_line" />
            <Button
                    android:id="@+id/btn_close_sale"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_action_bar_height"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:background="@drawable/button_chick_style"
                    android:text="closeSale"
                    android:textColor="@color/base_color_text_white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</ScrollView>