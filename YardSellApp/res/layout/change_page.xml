<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#232629" >


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="14"
                android:background="#e05b5b">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Me"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" android:weightSum="1">

            <LinearLayout
                    style="@style/Register_Input"
                    android:background="@drawable/corners_bg" android:weightSum="1">
                <EditText
                        android:id="@+id/et_email"
                        style="@style/Register_Edit"
                        android:textColor="#FFFFFF"
            			android:singleLine="true"
                        android:hint="@string/login_username_hint" />
            </LinearLayout>

            <LinearLayout
                    style="@style/Register_Input"
                    android:background="@drawable/corners_bg">
                <EditText
                        android:id="@+id/et_name"
                        style="@style/Register_Edit"
                        android:textColor="#FFFFFF"
                        android:hint="@string/login_username_hint" />
                <ImageButton
                    	android:id="@+id/btn_changename"
                       
                        android:layout_width="50dp"
                        style="@style/Smile.TextView._Black"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/login_account"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>
            </LinearLayout>


            <Button
                	android:id="@+id/btn_active"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_action_bar_height"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_chick_style"
                    android:text="activate your account"
                    android:textColor="@color/base_color_text_white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"/>


            <Button
                	android:id="@+id/btn_changepwd"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_action_bar_height"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_chick_style"
                    android:text="change password"
                    android:textColor="@color/base_color_text_white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"/>

            <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_action_bar_height"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/button_chick_style"
                    android:text="Submit"
                    android:textColor="@color/base_color_text_white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"/>

            <Button
					android:id="@+id/btn_logout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_action_bar_height"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/button_chick_style"
                    android:text="logout"
                    android:textColor="@color/base_color_text_white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
