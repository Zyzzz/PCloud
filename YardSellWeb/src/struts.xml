<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="default" namespace="/"
		extends="struts-default, json-default">
		<action name="login" class="com.imudges.yardsell.action.LoginAction">
			<result name="success" type="json">
				<param name="root">loginResult</param>
				<param name="excludeNullProperties">true</param>
				<param name="noCache">true</param>
				<param name="charSet">UTF-8</param>
			</result>
		</action>
		<action name="register" class="com.imudges.yardsell.action.RegisterAction">
			<result name="success" type="json">
				<param name="root">userModel</param>
				<param name="excludeNullProperties">true</param>
				<param name="noCache">true</param>
				<param name="charSet">UTF-8</param>
			</result>
		</action>
		<action name="getUser" class="com.imudges.yardsell.action.GetUserAction">
			<result name="success" type="json">
				<param name="root">user</param>
				<param name="excludeNullProperties">true</param>
				<param name="noCache">true</param>
				<param name="charSet">UTF-8</param>
			</result>
		</action>
		<action name="setSellInfo" class="com.imudges.yardsell.action.SetSellInfoAction">
			<result name="success" type="json">
				<param name="root">result</param>
				<param name="excludeNullProperties">true</param>
				<param name="noCache">true</param>
				<param name="charSet">UTF-8</param>
			</result>
		</action>
		<action name="openSell" class="com.imudges.yardsell.action.OpenSellAction">
			<result name="success" type="json">
				<param name="root">result</param>
				<param name="excludeNullProperties">true</param>
				<param name="noCache">true</param>
				<param name="charSet">UTF-8</param>
			</result>
		</action>
		<action name="closeSell" class="com.imudges.yardsell.action.CloseSellAction">
			<result name="success" type="json">
				<param name="root">result</param>
				<param name="excludeNullProperties">true</param>
				<param name="noCache">true</param>
				<param name="charSet">UTF-8</param>
			</result>
		</action>
		<action name="changeUserEmail"
			class="com.imudges.yardsell.action.ChangeUserEmailAction">
			<result name="success" type="json">
				<param name="root">result</param>
				<param name="excludeNullProperties">true</param>
				<param name="noCache">true</param>
				<param name="charSet">UTF-8</param>
			</result>
		</action>
		<action name="resetPassword" class="com.imudges.yardsell.action.ResetPasswordAction">
			<result name="success" type="json">
				<param name="root">userModel</param>
				<param name="excludeNullProperties">true</param>
				<param name="noCache">true</param>
				<param name="charSet">UTF-8</param>
			</result>
		</action>
		<action name="changeUserName" class="com.imudges.yardsell.action.ChangeUserNameAction">

			<result name="success" type="json">
				<param name="root">userModel</param>
				<param name="excludeNullProperties">true</param>
				<param name="noCache">true</param>
				<param name="charSet">UTF-8</param>
			</result>
		</action>
		<action name="activateEmail"
			class="com.imudges.yardsell.webAction.ActivateEmailAction">
			<result name="success">jsp/success.jsp</result>
			<result name="error">jsp/error.jsp</result>
		</action>
		<action name="sendEmail" class="com.imudges.yardsell.action.SendEmailAction">
			<result name="success" type="json">
				<param name="root">result</param>
				<param name="excludeNullProperties">true</param>
				<param name="noCache">true</param>
				<param name="charSet">UTF-8</param>
			</result>
		</action>
		<action name="getUserInfo" class="com.imudges.yardsell.action.GetUserInfoAction">
			<result name="success" type="json">
				<param name="root">userModel</param>
				<param name="excludeNullProperties">true</param>
				<param name="noCache">true</param>
				<param name="charSet">UTF-8</param>
			</result>
		</action>
		<action name="findSale" class="com.imudges.yardsell.action.FindSaleAction">
			<result name="success" type="json">
				<param name="root">list</param>
				<param name="excludeNullProperties">true</param>
				<param name="noCache">true</param>
				<param name="charSet">UTF-8</param>
			</result>
		</action>
		<action name="admin_login"
			class="com.imudges.yardsell.webAction.LoginAction">
			<result name="success">jsp/login.jsp</result>
		</action>
	</package>
	<!-- 该属性指定需要Struts2处理的请求后缀，该属性的默认值是action，即所有匹配*.action的请求都由Struts2处理。 如果用户需要指定多个请求后缀，则多个后缀之间以英文逗号（,）隔开。 -->
	<constant name="struts.action.extension" value="do,action" />
	<!-- 设置浏览器是否缓存静态内容,默认值为true(生产环境下使用),开发阶段最好关闭 -->
	<constant name="struts.serve.static.browserCache" value="false" />
	<!-- 当struts的配置文件修改后,系统是否自动重新加载该文件,默认值为false(生产环境下使用),开发阶段最好打开 -->
	<constant name="struts.configuration.xml.reload" value="true" />
	<!-- 开发模式下使用,这样可以打印出更详细的错误信息 -->
	<constant name="struts.devMode" value="true" />
	<!-- 默认的视图主题 -->
	<constant name="struts.ui.theme" value="simple" />
	<!--<constant name="struts.objectFactory" value="spring" /> -->
	<!--解决乱码 -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<!-- 指定允许上传的文件最大字节数。默认值是2097152(2M) -->
	<constant name="struts.multipart.maxSize" value="22097152" />
	<!-- 设置上传文件的临时文件夹,默认使用javax.servlet.context.tempdir -->
	<constant name="struts.multipart.saveDir " value="d:/tmp" />
	<package name="upload" namespace="/upload" extends="struts-default">
		<action name="execute" class="com.imudges.yardsell.action.FileUploadAction">
			<!-- 动态设置savePath的属性值 -->
			<param name="savePath">/image</param>
			<result name="success">/WEB-INF/page/message.jsp</result>
		</action>
	</package>
</struts>    

